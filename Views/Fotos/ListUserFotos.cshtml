@model IEnumerable<ProjetoBase64.Models.Foto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FotoPerfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.FotoPerfil)" alt="" srcset="" style="width: 500px;">  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curriculo.CurriculoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FotoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FotoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FotoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
