@model IEnumerable<ProjetoBase64.Models.Curriculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CurriculoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CurriculoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CurriculoId">Delete</a> |
                <a asp-controller="Fotos" asp-action="ListUserFotos" asp-route-id="@item.CurriculoId">Listar Fotos</a>
            </td>
        </tr>
}
    </tbody>
</table>
